extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST") 
        input(placeholder="Username", name="username", type="text", requited) 
        input(placeholder="Password", name="password", type="password", requited) 
        input(type="submit", value="Login")
        include partials/social-login
    div.auth-switch
        span Don't have an account? 
        a(href="/join") Create one now &rarr;